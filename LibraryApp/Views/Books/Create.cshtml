@model LibraryApp.Domain.DTOs.CreateBookDto

<h2>Registrar Libro</h2>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Título</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Año</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Género</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Páginas</label>
        <input asp-for="Pages" class="form-control" />
        <span asp-validation-for="Pages" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Autor</label>
        <select asp-for="AuthorId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName"))">
            <option value="">Seleccione un autor</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
